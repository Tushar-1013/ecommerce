<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Product Form</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style2.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="logo"><%= user.name%></div>
      <div class="flex">
        <div class="admin-info">
          <img
            alt="User profile picture"
            class="profile-pic"
            src="../assets/552721.png"
          />
          <div>
            <p class="admin-name">Admin</p>
          </div>
        </div>
        <button class="existing-products-btn" id="toggleButton">
          Existing Products
        </button>
        <button class="logout-btn" ><a href ="/logout">Logout</a></button>
      </div>
    </nav>
    <div class="main-content">
      <div class="form-container" id="formContainer">
        <div class="form-title">Product Form</div>
        <form
          id="productForm"
          class="space-y-4"
          method="POST"
          enctype="multipart/form-data"
          action="/addproducts"
        >
          <div class="form-group">
            <label class="form-label">Product Image</label>
            <input
              class="form-input"
              type="file"
              name="productImg"
              id="productImg"
            />
          </div>
          <div class="form-group">
            <label class="form-label">Product Name</label>
            <input
              class="form-input"
              type="text"
              name="productname"
              id="productname"
            />
          </div>
          <div class="form-group">
            <label class="form-label">Category</label>
            <input
              class="form-input"
              type="text"
              name="category"
              id="category"
            />
          </div>
          <div class="form-group">
            <label class="form-label">Subcategory</label>
            <input
              class="form-input"
              type="text"
              name="subcategory"
              id="subcategory"
            />
          </div>
          <div class="form-group">
            <label class="form-label">Description</label>
            <input
              class="form-input"
              type="text"
              name="productdes"
              id="productdes"
            />
          </div>
          <div class="form-group">
            <label class="form-label">Price</label>
            <input class="form-input" type="text" name="price" id="price" />
          </div>
          <button class="submit-btn" type="submit">Submit</button>
        </form>
      </div>
      <div class="product-list" id="productList">
        <!-- <table class="product-table" id="productTable">
          <thead>
            <tr>
              <th>Product Image</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Subcategory</th>
              <th>Price</th>
            </tr>
          </thead> -->
          <tbody>
            <!-- Product rows will be added here -->
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
